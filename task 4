CREATE TABLE Student (
  student_id INT PRIMARY KEY,
  name VARCHAR(50),
  age INT,
  department VARCHAR(30)
);

CREATE TABLE Course (
  course_id INT PRIMARY KEY,
  course_name VARCHAR(50),
  credits INT
);

CREATE TABLE Enrollment (
  enroll_id INT PRIMARY KEY,
  student_id INT,
  course_id INT,
  grade CHAR(2),
  FOREIGN KEY (student_id) REFERENCES Student(student_id),
  FOREIGN KEY (course_id) REFERENCES Course(course_id)
);
Display student names in uppercase
SELECT UPPER(name) AS STUDENT_NAME FROM Student;

 Find age + 5 years
SELECT name, age + 5 AS Age_in_5_Years FROM Student;

Concatenate name and department
SELECT CONCAT(name, ' - ', department) AS Student_Info FROM Student;

 Display current date
SELECT SYSDATE FROM dual;
